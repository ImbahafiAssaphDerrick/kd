{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**",
        "**/tests/**",
        "**/*.test.js",
        "**/*.spec.js"
      ],
      "env": { "jest": true },
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
