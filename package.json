{
  "name": "library-management-system",
  "version": "1.1.0",
  "private": true,
  "description": "Library Management System with CI/CD and Kubernetes deployment",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint .",
    "test:unit": "jest --testPathPattern=__tests__/unit --runInBand",
    "test:integration": "jest --testPathPattern=__tests__/integration --runInBand",
    "test:e2e": "jest --testPathPattern=__tests__/e2e --runInBand",
    "test": "npm run test:unit",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release": "node scripts/release.js",
    "deploy": "bash scripts/deploy.sh",
    "deploy:staging": "bash scripts/deploy.sh rolling staging",
    "deploy:production": "bash scripts/deploy.sh rolling production",
    "deploy:blue-green": "bash scripts/deploy.sh blue-green production",
    "rollback": "bash scripts/rollback.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
